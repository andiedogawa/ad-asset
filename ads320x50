// === Adsterra 320x50 Auto-Center (Safe for GitHub & Hostinger) ===
document.addEventListener("DOMContentLoaded", function() {
  // Buat container utama untuk iklan
  const adContainer = document.createElement("div");
  adContainer.id = "adsterra-320x50";
  adContainer.style.display = "flex";
  adContainer.style.justifyContent = "center";
  adContainer.style.alignItems = "center";
  adContainer.style.width = "100%";
  adContainer.style.margin = "10px 0";
  adContainer.style.zIndex = "9999";

  // Tambahkan ke body
  document.body.appendChild(adContainer);

  // Tambahkan script Adsterra secara dinamis
  const adConfig = document.createElement("script");
  adConfig.type = "text/javascript";
  adConfig.text = `
    atOptions = {
      'key' : 'a2587c5abac6fb7c05cd2e91eac1c480',
      'format' : 'iframe',
      'height' : 50,
      'width' : 320,
      'params' : {}
    };
  `;

  const adScript = document.createElement("script");
  adScript.type = "text/javascript";
  adScript.src = "https://www.highperformanceformat.com/a2587c5abac6fb7c05cd2e91eac1c480/invoke.js";

  // Masukkan script ke container
  adContainer.appendChild(adConfig);
  adContainer.appendChild(adScript);
});
